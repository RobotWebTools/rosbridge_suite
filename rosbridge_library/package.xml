<?xml version="1.0"?>
<package>
  <name>rosbridge_library</name>
  <version>0.3.0</version>
  <description>
    The core rosbridge package, repsonsible for interpreting JSON andperforming
    the appropriate ROS action, like subscribe, publish, call service, and
    interact with params.
  </description>

  <maintainer email="baalexander@gmail.com">Brandon Alexander</maintainer>

  <license>BSD</license>

  <url type="website">https://github.com/RobotWebTools/rosbridge_suite</url>

  <author email="jonathan.c.mace@gmail.com">Jonathan Mace</author>

  <buildtool_depend>catkin</buildtool_depend>
  <build_depend>rospy</build_depend>
  <build_depend>rosservice</build_depend>
  <build_depend>rostopic</build_depend>
  <build_depend>python-imaging</build_depend>
  <run_depend>rospy</run_depend>
  <run_depend>rosservice</run_depend>
  <run_depend>rostopic</run_depend>
  <run_depend>python-imaging</run_depend>
  <test_depend>roscpp</test_depend>

</package>
